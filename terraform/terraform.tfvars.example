# Ejemplo de archivo terraform.tfvars
# Copia este archivo como terraform.tfvars y configura tus valores

aws_region     = "us-east-1"
environment    = "dev"
project_name   = "ecko"
app_name       = "ecko-asistente"

# ECS Configuration (Free Tier friendly)
ecs_task_cpu    = 256  # 0.25 vCPU
ecs_task_memory = 512  # 512 MB
desired_count   = 1

# Container Configuration
container_port = 8000

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# ALB Configuration (deshabilitado por defecto para ahorrar costos)
enable_alb = false  # Cambiar a true si necesitas ALB (~$16/mes)

# IA Configuration
use_ai       = "true"
groq_api_key = ""  # Configurar aqu√≠ o usar AWS Secrets Manager

